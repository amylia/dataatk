<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.exsoft.amy.MainActivity" >

    <EditText
        android:id="@+id/txtNamabarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="Nama Barang"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtMerek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Merek"
        android:ems="10"
        android:layout_below="@+id/txtNamabarang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtNamabarang"
        android:layout_alignEnd="@+id/txtNamabarang">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtSatuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Satuan"
        android:ems="10"
        android:layout_below="@+id/txtMerek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtJumlah"
        android:layout_alignEnd="@+id/txtJumlah">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jumlah"
        android:ems="10"
        android:layout_below="@+id/txtSatuan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listAtk"
        android:layout_alignEnd="@+id/listAtk">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Harga"
        android:ems="10"
        android:layout_below="@+id/txtJumlah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listAtk"
        android:layout_alignEnd="@+id/listAtk">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00CED1"
        android:onClick="save"
        android:text="Simpan"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listAtk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtHarga">

    </ListView>

</RelativeLayout>
